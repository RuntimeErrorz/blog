
<div class="header">
    <div class="header-container" style="margin-bottom: 3ex;">
        <img style="
        width: 56px;
        height: auto;" alt="^-^" cache-control="max-age=86400" class="header-img" src="<%- url_for('/avatar.jpg') %>" width="10%"></img>
        <div class="header-content">
            <div class="logo"><%= config.title %></div> 
            <span class="description"><%= config.description %></span> 
        </div>
        
    </div>
    
   
    <ul class="nav">
        <% for (name in theme.menu) { %>
            <% if(theme.menu[name] === "/" && path == "index.html" || theme.menu[name].substring(1, theme.menu[name].length - 1) == path.substring(0, path.indexOf("/"))) { %>
                <li>
                    <i>
                        <u>
                            <a style="color: #4e7dde;" href="<%- url_for(theme.menu[name]) %>"><%= name %></a>
                        </u>
                    </i>
                </li>
            <%} else {%>
                <li><a href="<%- url_for(theme.menu[name]) %>"><%= name %></a></li>
            <% } %>
        <% } %>
    </ul>
</div>